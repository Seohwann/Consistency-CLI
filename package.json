{
  "name": "consistency",
  "version": "0.1.0",
  "description": "CLI tool to enforce pinned dependencies and improve lint/format consistency, inspired by Databrain team collaboration issues.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "consistency": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run format && npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
  "@eslint/js": "9.39.1",
  "@types/node": "24.10.1",
  "@typescript-eslint/eslint-plugin": "8.48.0",
  "@typescript-eslint/parser": "8.48.0",
  "eslint": "9.39.1",
  "eslint-config-prettier": "10.1.8",
  "eslint-plugin-import": "2.32.0",
  "eslint-plugin-prettier": "5.5.4",
  "eslint-plugin-react": "7.37.5",
  "globals": "16.5.0",
  "jiti": "2.6.1",
  "prettier": "3.7.3",
  "typescript": "5.9.3",
  "typescript-eslint": "8.48.0",
  "vitest": "4.0.14"
  }
}
